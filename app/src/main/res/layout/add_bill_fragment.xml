<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_card_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#e3f2fd"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/telephone_layout"

            >

            <Button
                android:id="@+id/gift_open"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"

                android:gravity="center"
                android:onClick="onClick" />

            <!--<Button
                android:id="@+id/menu_open"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_menu_white_36dp"
                android:gravity="center"
                android:onClick="onClick" />-->

            <TextView
                android:id="@+id/telephoneTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="شماره تلفن خود را وارد کنید"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/amount_layout"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/board_back"
        android:onClick="onClick">

        <TextView
            android:id="@+id/amount_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:alpha="0.78"
            android:text="تعداد"
            android:textColor="#FFF"
            android:textSize="13dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/amount_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="هنوز شماره تلفنی ثبت نشده"
            android:textColor="#FFF"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/amount_toman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:alpha="0.78"
            android:text="تومان"
            android:textColor="#FFF"
            android:textSize="13dp"
            android:visibility="gone" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/add_bill"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_margin="16dp"
        android:clickable="true"
        android:onClick="onClick"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="2dp">

