<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3f2fd"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/card_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:background="#e2f3fd">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/card_bg">

                <ImageButton
                    android:id="@+id/edit_dot"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="8dp"
                    android:adjustViewBounds="true"
                    android:alpha="0.26"
                    android:background="@drawable/ic_more_vert_black_36dp"
                    android:scaleType="fitCenter"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="30dp"
                    android:gravity="right|center"
                    android:onClick="onClick"
                    android:text="بانک پارسیان"
                    android:textColor="#FFF"
                    android:textSize="17dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/card_number"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/cvv2_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="0dp"
                        android:gravity="right|center"
                        android:text="cvv2"
                        android:textColor="#000"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/cvv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/cvv2_label"
                        android:gravity="right|center"
                        android:onClick="onClick"
                        android:text="846"
                        android:textColor="#000"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/expire_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center"
                        android:text="انقضا"
                        android:textColor="#000"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/expire_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/expire_label"
                        android:gravity="right|center"
                        android:text="02/97"
                        android:textColor="#000"
                        android:textSize="17dp" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/card_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:gravity="right|center"
                    android:text="5022-2910-3423-7758"
                    android:textColor="#000"
                    android:textSize="17dp" />

            </RelativeLayout>

        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.55"
            android:layout_centerInParent="true"
            android:layout_margin="30dp"
            android:background="#e3f2fd" />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/left_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:clickable="false">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:clickable="true">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/version">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include layout="@layout/nav_header_main" />

                    <LinearLayout
                        android:id="@+id/adslLA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="right|center"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/adsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center"
                            android:layout_marginRight="10dp"
                            android:alpha="0.54"
                            android:clickable="true"
                            android:gravity="right|center"
                            android:onClick="onClick"
                            android:text="خرید شارژ ADSL"
                            android:textColor="#000000"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/internationalLA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="right|center"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/internationalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center"
                            android:layout_marginRight="10dp"
                            android:alpha="0.54"
                            android:clickable="true"
                            android:gravity="right|center"
                            android:onClick="onClick"
                            android:text="تماس بین المللی"
                            android:textColor="#000000"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/problemLA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="right|center"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/problemText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center"
                            android:layout_marginRight="10dp"
                            android:alpha="0.54"
                            android:clickable="true"
                            android:gravity="right|center"
                            android:onClick="onClick"
                            android:text="خرابی تلفن"
                            android:textColor="#000000"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="20dp"
                        android:alpha="0.26"
                        android:background="#858687" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="right|center"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center"
                            android:layout_marginRight="10dp"
                            android:alpha="0.54"
                            android:clickable="true"
                            android:gravity="right|center"
                            android:onClick="onClick"
                            android:text="شبکه هوشمند IN(بزودی)"
                            android:textColor="#000000"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="right|center"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center"
                            android:layout_marginRight="10dp"
                            android:alpha="0.54"
                            android:clickable="true"
                            android:gravity="right|center"
                            android:onClick="onClick"
                            android:text="دریافت ریز مکالمات(بزودی)"
                            android:textColor="#000000"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="right|center"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center"
                            android:layout_marginRight="10dp"
                            android:alpha="0.54"
                            android:clickable="true"
                            android:gravity="right|center"
                            android:onClick="onClick"
                            android:text="تعویض شماره(بزودی)"
                            android:textColor="#000000"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="right|center"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center"
                            android:layout_marginRight="10dp"
                            android:alpha="0.54"
                            android:clickable="true"
                            android:gravity="right|center"
                            android:onClick="onClick"
                            android:text="تغییر مکان(بزودی)"
                            android:textColor="#000000"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="20dp"
                        android:alpha="0.26"
                        android:background="#858687" />

                    <LinearLayout
                        android:id="@+id/exitLA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="right|center"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center"
                            android:layout_marginRight="10dp"
                            android:alpha="0.54"
                            android:clickable="false"
                            android:gravity="right|center"
                            android:text="خروج"
                            android:textColor="#000000"
                            android:textSize="14dp" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:alpha="0.34"
                android:clickable="false"
                android:gravity="right|center"
                android:textColor="#000000"
                android:textSize="12dp" />

        </RelativeLayout>

    </FrameLayout>

</android.support.v4.widget.DrawerLayout>