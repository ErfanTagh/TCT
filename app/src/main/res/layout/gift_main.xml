<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3f2fd"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/actionBar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentTop="true"
            android:background="#e3f2fd"
            android:gravity="right|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/menu_open"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_menu_white_36dp"
                android:gravity="center"
                android:onClick="onClick" />

            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@+id/menu_open"
                android:text="مخابرات شگفت انگیز"
                android:textColor="#4d872c"
                android:textSize="18dp" />

            <Button
                android:id="@+id/back"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="7dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@drawable/back_arrow"
                android:gravity="center" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/bill_result"
                    android:layout_width="wrap_content"
                    android:layout_height="236dp"
                    android:layout_below="@+id/amount_layout"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:id="@+id/main_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="right|center">

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:adjustViewBounds="true"
                            android:background="@drawable/g2"
                            android:scaleType="fitCenter"
                            android:visibility="visible" />

                    </RelativeLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/bill_result1"
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:layout_below="@+id/amount_layout"
                    android:layout_centerInParent="true"
                    android:layout_weight="0.3"
                    android:clickable="true"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="right|center">

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:adjustViewBounds="true"
                            android:background="@drawable/g1"
                            android:scaleType="fitCenter"
                            android:visibility="visible" />

                    </RelativeLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:layout_below="@+id/amount_layout"
                    android:layout_centerInParent="true"
                    android:layout_weight="0.3"
                    android:clickable="true"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="right|center">

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:adjustViewBounds="true"
                            android:background="@drawable/g3"
                            android:scaleType="fitCenter"
                            android:visibility="visible" />

                    </RelativeLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:layout_below="@+id/amount_layout"
                    android:layout_centerInParent="true"
                    android:layout_weight="0.3"
                    android:clickable="true"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ff9800"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="?actionBarSize"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="طرح های جدید بزودی ..."
                            android:textColor="#FFF"
                            android:textSize="20dp" />

                    </RelativeLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/left_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:clickable="false">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:clickable="true">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/version">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include layout="@layout/nav_header_main" />

                    <LinearLayout
                        android:id="@+id/adslLA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="right|center"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mciText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center"
                            android:layout_marginRight="10dp"
                            android:alpha="0.54"
                            android:clickable="true"
                            android:gravity="right|center"
                            android:onClick="onClick"
                            android:text="خرید شارژ ADSL"
                            android:textColor="#000000"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/internationalLA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="right|center"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mtnText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center"
                            android:layout_marginRight="10dp"
                            android:alpha="0.54"
                            android:clickable="true"
                            android:gravity="right|center"
                            android:onClick="onClick"
                            android:text="تماس بین المللی"
                            android:textColor="#000000"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/problemLA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="right|center"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mtnText2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center"
                            android:layout_marginRight="10dp"
                            android:alpha="0.54"
                            android:clickable="true"
                            android:gravity="right|center"
                            android:text="خرابی تلفن"
                            android:textColor="#000000"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="20dp"
                        android:alpha="0.26"
                        android:background="#858687" />

                    <LinearLayout
                        android:id="@+id/exitLA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="right|center"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center"
                            android:layout_marginRight="10dp"
                            android:alpha="0.54"
                            android:clickable="false"
                            android:gravity="right|center"
                            android:text="خروج"
                            android:textColor="#000000"
                            android:textSize="14dp" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:alpha="0.34"
                android:clickable="false"
                android:gravity="right|center"
                android:textColor="#000000"
                android:textSize="12dp" />

        </RelativeLayout>

    </FrameLayout>

</android.support.v4.widget.DrawerLayout>
